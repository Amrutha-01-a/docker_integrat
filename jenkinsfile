pipeline {
    agent any
    stages {
        stage("Check Docker Version") {
            steps {
                sh "docker build -t nginxtest:latest ."
                sh " docker nginxtest amrutha0102/dockerpipeline:latest"
                sh " docker nginxtest amrutha0102/dockerpipeline:$BUILD_NUMBER"
            }
        }
        stage('publish to docker hub') {
            steps {
                WithDockerRegisrty([credentialsId: "dockerhub-credentials", url:""]){
                    sh "docker push amrutha0102/dockerpipeline:latest"
                    sh " docker push amrutha0102/dockerpipeline:$BUILD_NUMBER"
                }
            }
        }
    }
}
